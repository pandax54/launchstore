{% extends 'layout.njk' %}
{% import "parts/card.njk" as cards %}

{% block content %}

    {% call cards.render('Editar produto', 'container')%}

    <form action="/products?_method=PUT" method="POST" enctype="multipart/form-data">

        <div class="fields">
            {% include 'products/fields.njk'%}
        </div>

        <input type="hidden" name="id" value="{{product.id}}">

        <button type="submit" class="button edit">Atualizar</button>

    </form>

    <form id="form-delete" action="/products?_method=DELETE" method="POST">
        <input type="hidden" name="id" value="{{product.id}}">
        <button class="button delete" type="submit">Deletar</button>
    </form>

    {% endcall %}

{% endblock content %}

{% block script %}

    <script src="/js/deleteConfirm.js"></script>
    <script src="/js/scripts.js"></script>

{% endblock %}