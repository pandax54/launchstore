<div class="item">
    <div>Email</div>
    <div class="login">
        <input class="login" style="width: 100%" type="text" name="email" value="{{user.email}}" placeholder="Digite o seu email..." onblur="Validate.apply(this, 'isEmail')">
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="login">
        <input class="login" type="password" name="password" placeholder="Digite sua senha...">
    </div>
</div>

<div class="item">
    <div>Repetir Senha</div>
    <div>
        <input type="password" name="passwordRepeat" placeholder="Repita a senha escolhida...">
    </div>
</div>

<input type="hidden" name="token" value="{{token}}">