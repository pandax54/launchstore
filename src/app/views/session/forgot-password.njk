{% extends 'layout.njk' %}
{% import "parts/card.njk" as cards %}

{% block content %}

    {% call cards.render('Esqueceu a senha?', 'password container')%}

    {# {% include "../parts/messages.njk" %} #}

    <form action="/users/forgot-password" method="POST">

        {# <div class="header">
            <h3>Esqueceu a senha?</h3>
        </div> #}

        <div class="fields">
            <div class="item">
                <div>Email</div>
                <div class="login">
                    <input class="login" style="width: 100%" type="text" name="email" value="{{user.email}}" placeholder="Digite o email cadastrado..." onblur="Validate.apply(this, 'isEmail')">
                </div>
            </div>
        </div>

        <button type="submit" class="button">Recuperar senha</button>

    </form>

    {% endcall %}

    {# {% include "../parts/messages.njk" %} #}

{% endblock content %}

{% block script %}

    <script src="/js/scripts.js"></script>

{% endblock %}